{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build",
    "emitDeclarationOnly": false,
    "outDir": "build",
    "module": "ESNext",
    "target": "ES2019",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/lib"
  ]
}
